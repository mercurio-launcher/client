<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.mercurio.controllers.SettingsController">

    <!-- TOPBAR: título + separador + selector -->
    <top>
        <VBox spacing="8" BorderPane.alignment="CENTER">
            <!-- Barra superior con título (reusa tu .section-page-title) -->
            <HBox spacing="12" alignment="CENTER_LEFT" styleClass="header">
                <Label text="Configuración" styleClass="section-page-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Selector integrado (reusa .toolbar y añade .tabbar) -->
            <ToolBar styleClass="toolbarTabbar">
                <fx:define>
                    <ToggleGroup fx:id="navGroup"/>
                </fx:define>

                <ToggleButton fx:id="btnGeneral"
                              text="General Settings"
                              toggleGroup="$navGroup"
                              selected="true"
                              styleClass="tab-btn"/>

                <ToggleButton fx:id="btnDetail"
                              text="Account Details"
                              toggleGroup="$navGroup"
                              styleClass="tab-btn"/>

                <ToggleButton fx:id="btnAbout"
                              text="About us"
                              toggleGroup="$navGroup"
                              styleClass="tab-btn"/>
            </ToolBar>
        </VBox>
    </top>
    <!-- Separador fino (reusa tu .separator *.line) -->
    <Separator/>
    <!-- CONTENEDOR CENTRAL (panel inferior que “se une” al tab seleccionado) -->
    <center>
        <StackPane fx:id="contentContainer" styleClass="content-root content-panel"/>
    </center>

    <!-- Márgenes del root (si quieres 0 a los lados, pon right/left a 0) -->
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
</BorderPane>
