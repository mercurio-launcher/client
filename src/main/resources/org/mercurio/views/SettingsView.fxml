<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.mercurio.controllers.SettingsController">

    <!-- TOPBAR: título + toolbar de navegación -->
    <top>
        <VBox spacing="12" BorderPane.alignment="CENTER">
            <!-- Barra superior con título -->
            <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
                <Label text="Configuración" styleClass="section-page-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <!-- (Opcional) espacio para acciones globales -->
            </HBox>

            <!-- Toolbar de navegación (botones integrados) -->
            <ToolBar styleClass="toolbar">
                <ToggleButton fx:id="btnGeneral" prefHeight="34.0" prefWidth="216.0" selected="true" styleClass="nav-btn" text="Home" />
                <ToggleButton fx:id="btnDetail" prefHeight="34.0" prefWidth="216.0" styleClass="nav-btn" text="Instances" />
                <ToggleButton fx:id="btnAbout" prefHeight="34.0" prefWidth="216.0" styleClass="nav-btn" text="Analytics" />
            </ToolBar>
        </VBox>
    </top>

    <!-- CONTENEDOR CENTRAL (carga dinámica) -->
    <center>
        <StackPane fx:id="contentContainer" styleClass="content-root" />
    </center>

    <!-- Márgenes internos opcionales -->
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
</BorderPane>
