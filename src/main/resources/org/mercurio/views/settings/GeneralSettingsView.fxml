<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1000.0" styleClass="content-root"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">

    <!-- HEADER -->
    <VBox spacing="16.0" AnchorPane.topAnchor="24.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                <Label text="Configuración general" styleClass="section-h1"/>
                <Label text="Ajusta tu cuenta, apariencia, recursos y actualizaciones." styleClass="label"/>
            </VBox>
            <HBox spacing="8">
                <Button fx:id="btnCancelar" styleClass="button-ghost" text="Cancelar"/>
                <Button fx:id="btnGuardar" styleClass="button-primary" text="Guardar cambios"/>
            </HBox>
        </HBox>
        <Separator styleClass="separator"/>
    </VBox>

    <!-- SCROLLABLE CONTENT -->
    <ScrollPane fitToWidth="true" styleClass="home-scroll"
                AnchorPane.topAnchor="120" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <content>
            <VBox spacing="20">
                <padding><Insets top="0" right="24" bottom="32" left="24"/></padding>

                <!-- ===== Cuenta y perfil ===== -->
                <VBox spacing="12" styleClass="card">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="card-title" text="Cuenta y perfil"/>
                        <Label styleClass="kpi-foot" text="Gestiona tu identidad local y la carpeta de datos."/>
                    </HBox>

                    <!-- Action bar a la IZQUIERDA (explícita, no en menú) -->
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Button text="Cambiar avatar" styleClass="button-ghost"/>
                        <Button text="Cerrar sesión" styleClass="button-danger"/>
                    </HBox>

                    <GridPane hgap="12" vgap="10">
                        <!-- Avatar + usuario -->
                        <Label text="Usuario actual" styleClass="kpi-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <HBox spacing="12" GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <ImageView fx:id="imgAvatar" fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true"/>
                            <VBox spacing="3">
                                <Label text="rumaking" styleClass="label"/>
                                <Label text="ID local • Sólo visible en este dispositivo" styleClass="kpi-foot"/>
                            </VBox>
                        </HBox>

                        <!-- Carpeta de datos -->
                        <Label text="Carpeta de datos" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <HBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <TextField fx:id="txtDataDir" promptText="C:/Users/rumaking/AppData/Roaming/Mercurio" HBox.hgrow="ALWAYS"/>
                            <SplitMenuButton styleClass="split-menu-button" text="Explorar">
                                <items>
                                    <MenuItem text="Abrir carpeta"/>
                                    <MenuItem text="Copiar ruta"/>
                                </items>
                            </SplitMenuButton>
                        </HBox>

                        <!-- Nota contextual -->
                        <Label text="La carpeta de datos contiene perfiles, logs y ajustes. Cambiarla no mueve contenido automáticamente."
                               wrapText="true" styleClass="kpi-foot" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- ===== Apariencia e idioma ===== -->
                <VBox spacing="12" styleClass="card">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="card-title" text="Apariencia e idioma"/>
                        <Label styleClass="kpi-foot" text="Tema, acento y accesibilidad de la interfaz."/>
                    </HBox>

                    <!-- Action bar izquierda: acciones rápidas de preview -->
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Button text="Previsualizar cambios" styleClass="button-ghost"/>
                        <Button text="Reiniciar colores" styleClass="button-ghost"/>
                    </HBox>

                    <GridPane hgap="12" vgap="10">
                        <Label text="Tema" styleClass="kpi-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ChoiceBox fx:id="cbTema" GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Oscuro"/>
                                    <String fx:value="Claro"/>
                                    <String fx:value="Sistema"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>

                        <Label text="Color de acento" styleClass="kpi-label" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <ChoiceBox fx:id="cbAcento" GridPane.rowIndex="0" GridPane.columnIndex="3">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Púrpura"/>
                                    <String fx:value="Azul"/>
                                    <String fx:value="Verde"/>
                                    <String fx:value="Naranja"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>

                        <Label text="Idioma" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ChoiceBox fx:id="cbIdioma" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Español"/>
                                    <String fx:value="Inglés"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>

                        <Label text="Tamaño de fuente" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <HBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="3">
                            <Slider fx:id="sliderFuente" majorTickUnit="2" max="20" min="12" snapToTicks="true" value="14"/>
                            <Label styleClass="muted" text="pt"/>
                        </HBox>

                        <Label text="Accesibilidad" styleClass="kpi-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <HBox spacing="8" GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <ToggleButton fx:id="tglContraste" text="Alto contraste"/>
                        </HBox>

                        <Label text="El alto contraste mejora la legibilidad. El idioma afecta a textos y formatos."
                               wrapText="true" styleClass="kpi-foot" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- ===== Recursos ===== -->
                <VBox spacing="12" styleClass="card">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="card-title" text="Recursos"/>
                        <Label styleClass="kpi-foot" text="Rutas y uso de hardware al lanzar instancias."/>
                    </HBox>

                    <!-- Action bar izquierda -->
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Button fx:id="btnCambiarRuta" styleClass="button-ghost" text="Cambiar ruta de instalación"/>
                        <Button styleClass="button-ghost" text="Detectar GPU"/>
                    </HBox>

                    <GridPane hgap="12" vgap="10">
                        <Label text="Ruta de instalación" styleClass="kpi-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtRutaInstalacion" promptText="C:/Users/Rumaking/AppData/Roaming/.minecraft"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

                        <Label text="Memoria (RAM)" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <HBox spacing="8" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <Slider fx:id="sliderRam" majorTickUnit="1" max="16" min="1" snapToTicks="true" value="4"/>
                            <Label styleClass="muted" text="GB"/>
                        </HBox>

                        <Label text="Usar GPU dedicada" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <CheckBox fx:id="chkUsarGPU" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="La memoria afecta al rendimiento y estabilidad del juego. GPU dedicada recomendado para shaders."
                               wrapText="true" styleClass="kpi-foot" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
                    </GridPane>
                </VBox>

                <!-- ===== Actualizaciones ===== -->
                <VBox spacing="12" styleClass="card">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="card-title" text="Actualizaciones"/>
                        <Label styleClass="kpi-foot" text="Preferencias para nuevas versiones del launcher."/>
                    </HBox>

                    <!-- Action bar izquierda: acciones claras (no menú genérico) -->
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Button text="Buscar ahora" styleClass="button-primary"/>
                        <Button text="Ver historial" styleClass="button-ghost"/>
                    </HBox>

                    <GridPane hgap="12" vgap="10">
                        <CheckBox fx:id="chkAutoUpdate" selected="true" text="Buscar actualizaciones automáticamente"
                                  GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="4"/>

                        <!-- SUGERENCIA: controla visibilidad de estas filas desde el controlador según el estado de chkAutoUpdate -->
                        <Label text="Canal" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ChoiceBox fx:id="cbCanal" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Estable"/>
                                    <String fx:value="Beta"/>
                                    <String fx:value="Nightly"/>
                                </FXCollections>
                            </items>
                        </ChoiceBox>

                        <Label text="Permitir pre-releases" styleClass="kpi-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <CheckBox fx:id="chkPrereleases" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="El canal 'Estable' es el recomendado. 'Beta' y 'Nightly' pueden incluir cambios inestables."
                               wrapText="true" styleClass="kpi-foot" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
                    </GridPane>
                </VBox>

                <!-- ===== Acerca de ===== -->
                <VBox spacing="12" styleClass="card">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="card-title" text="Acerca de Mercurio"/>
                        <Label styleClass="kpi-foot" text="Información de versión y licencias."/>
                    </HBox>

                    <GridPane hgap="12" vgap="8">
                        <Label text="Versión" styleClass="kpi-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="lblVersion" text="1.0.0" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Canal" styleClass="kpi-label" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="lblCanal" text="Estable" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                    </GridPane>

                    <!-- Action bar izquierda -->
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Button fx:id="btnLicencias" styleClass="button-ghost" text="Ver licencias"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label styleClass="kpi-foot" text="© 2025 Mercurio Launcher — Todos los derechos reservados."/>
                    </HBox>
                </VBox>

                <!-- ===== Zona peligrosa ===== -->
                <VBox spacing="12" styleClass="card">
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="card-title" text="Zona peligrosa"/>
                        <Label styleClass="kpi-foot" text="Acciones destructivas. Requieren confirmación."/>
                    </HBox>

                    <Label styleClass="kpi-foot"
                           text="Estas acciones no se pueden deshacer. Asegúrate de tener copias de seguridad de tus perfiles e instancias."
                           wrapText="true"/>

                    <!-- Action bar izquierda -->
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Button fx:id="btnResetDefaults" styleClass="button-danger" text="Restaurar valores predeterminados" minWidth="280"/>
                    </HBox>
                </VBox>

            </VBox>
        </content>
    </ScrollPane>

</AnchorPane>
