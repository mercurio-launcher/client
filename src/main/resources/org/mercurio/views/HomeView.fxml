<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1200" prefHeight="800">

    <children>
        <ScrollPane fitToWidth="true"
                    AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    styleClass="home-scroll">

            <content>
                <VBox spacing="40" styleClass="home-container">
                    <padding>
                        <Insets top="32" right="32" bottom="48" left="32"/>
                    </padding>

                    <!-- ==================== HERO / BIENVENIDA ==================== -->
                    <VBox spacing="18">
                        <children>
                            <HBox spacing="28">
                                <padding><Insets top="28" right="28" bottom="28" left="28"/></padding>
                                <children>
                                    <VBox spacing="14" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Bienvenido a Mercurio Launcher" styleClass="section-title"/>
                                            <Label wrapText="true"
                                                   text="Gestiona tus perfiles, versiones de Minecraft y mods con una interfaz moderna desarrollada en JavaFX y Gradle."
                                                   styleClass="muted"/>

                                            <Region prefHeight="8"/>
                                            <HBox spacing="14">
                                                <children>
                                                    <Button text="Iniciar juego" styleClass="button-primary"/>
                                                    <Button text="Ver configuración" styleClass="button-ghost"/>
                                                </children>
                                            </HBox>

                                            <Region prefHeight="10"/>
                                            <VBox spacing="8">
                                                <children>
                                                    <Label text="• Perfiles de jugador personalizables" styleClass="muted"/>
                                                    <Label text="• Control total sobre versiones, mods y recursos" styleClass="muted"/>
                                                    <Label text="• Compatible con servidores y multicuenta" styleClass="muted"/>
                                                </children>
                                            </VBox>
                                        </children>
                                    </VBox>

                                    <VBox styleClass="card" spacing="10" prefWidth="360">
                                        <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>
                                        <children>
                                            <Label text="Último perfil" styleClass="card-title"/>
                                            <Label text="Usuario: rumaking" styleClass="card-subtitle"/>
                                            <Label text="Versión: 1.21.1 (Fabric)" styleClass="card-subtitle"/>
                                            <Region prefHeight="6"/>
                                            <Button text="Jugar ahora" styleClass="button-primary"/>
                                            <Separator/>
                                            <Label text="Estado del servidor: Online" styleClass="muted"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                            <Separator/>
                        </children>
                    </VBox>

                    <!-- ==================== SECCIÓN DE NOTICIAS ==================== -->
                    <VBox spacing="16">
                        <padding><Insets top="0" right="4" bottom="0" left="4"/></padding>
                        <children>
                            <Label text="Novedades del proyecto" styleClass="section-title"/>
                            <Region prefHeight="6"/>
                            <HBox spacing="20">
                                <children>
                                    <VBox styleClass="card" spacing="10">
                                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                                        <children>
                                            <Label text="🚀 Nueva versión 1.3.0 disponible" styleClass="card-title"/>
                                            <Label wrapText="true"
                                                   text="Ahora con integración de cuentas Microsoft, soporte para mods en carpetas múltiples y mejoras en el rendimiento general."
                                                   styleClass="muted"/>
                                        </children>
                                    </VBox>

                                    <VBox styleClass="card" spacing="10">
                                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                                        <children>
                                            <Label text="🧩 Actualización visual" styleClass="card-title"/>
                                            <Label wrapText="true"
                                                   text="El lanzador adopta la estética oscura por defecto con una nueva tipografía y animaciones suaves."
                                                   styleClass="muted"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <Separator/>

                    <!-- ==================== RESUMEN (KPIs) ==================== -->
                    <VBox spacing="14">
                        <children>
                            <Label text="Resumen de hoy" styleClass="section-title"/>
                            <Region prefHeight="4"/>
                            <FlowPane hgap="16" vgap="16" prefWrapLength="900">
                                <children>
                                    <VBox styleClass="kpi-card" spacing="6">
                                        <Label text="Tareas" styleClass="kpi-label"/>
                                        <Label text="12" styleClass="kpi-value"/>
                                        <Label text="3 vencen hoy" styleClass="kpi-foot"/>
                                    </VBox>

                                    <VBox styleClass="kpi-card" spacing="6">
                                        <Label text="Informes" styleClass="kpi-label"/>
                                        <Label text="5" styleClass="kpi-value"/>
                                        <Label text="2 pendientes" styleClass="kpi-foot"/>
                                    </VBox>

                                    <VBox styleClass="kpi-card" spacing="6">
                                        <Label text="Usuarios" styleClass="kpi-label"/>
                                        <Label text="1,284" styleClass="kpi-value"/>
                                        <Label text="+18 hoy" styleClass="kpi-foot"/>
                                    </VBox>

                                    <VBox styleClass="kpi-card" spacing="6">
                                        <Label text="Estado" styleClass="kpi-label"/>
                                        <Label text="Operativo" styleClass="kpi-value"/>
                                        <Label text="Uptime 99.98%" styleClass="kpi-foot"/>
                                    </VBox>
                                </children>
                            </FlowPane>
                        </children>
                    </VBox>

                    <Separator/>

                    <!-- ==================== ¿QUÉ ES MERCURIO? ==================== -->
                    <VBox spacing="18">
                        <children>
                            <Label text="¿Qué es Mercurio?" styleClass="section-title"/>
                            <Label wrapText="true"
                                   text="Mercurio es un launcher alternativo de Minecraft creado con JavaFX y Gradle. Ofrece una experiencia fluida, modular y 100% open-source, pensado para entusiastas y desarrolladores."
                                   maxWidth="900" styleClass="muted"/>
                            <Region prefHeight="6"/>
                            <HBox spacing="20">
                                <children>
                                    <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS">
                                        <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                                        <children>
                                            <Label text="Desarrollo moderno" styleClass="card-title"/>
                                            <Label wrapText="true"
                                                   text="Arquitectura MVC/MVVM con Gradle y BootstrapFX, CI/CD en GitHub Actions y soporte multiplataforma."
                                                   styleClass="muted"/>
                                        </children>
                                    </VBox>

                                    <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS">
                                        <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                                        <children>
                                            <Label text="Experiencia del usuario" styleClass="card-title"/>
                                            <Label wrapText="true"
                                                   text="Interfaz limpia, modo oscuro, diseño espacioso y navegación lateral optimizada para fluidez."
                                                   styleClass="muted"/>
                                        </children>
                                    </VBox>

                                    <VBox styleClass="card" spacing="8" HBox.hgrow="ALWAYS">
                                        <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                                        <children>
                                            <Label text="Comunidad abierta" styleClass="card-title"/>
                                            <Label wrapText="true"
                                                   text="Mercurio es de código abierto: colabora, comparte y mejora el launcher junto con la comunidad."
                                                   styleClass="muted"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <Separator/>

                    <!-- ==================== FAQ ==================== -->
                    <VBox spacing="14">
                        <children>
                            <Label text="Preguntas frecuentes" styleClass="section-title"/>
                            <Accordion>
                                <panes>
                                    <TitledPane text="¿Dónde se guardan los perfiles de jugador?">
                                        <content>
                                            <VBox spacing="8">
                                                <padding><Insets top="10" right="14" bottom="10" left="14"/></padding>
                                                <Label wrapText="true"
                                                       text="Los perfiles se guardan en la carpeta del lanzador bajo /profiles/, donde puedes editar manualmente el JSON de configuración."
                                                       styleClass="muted"/>
                                            </VBox>
                                        </content>
                                    </TitledPane>
                                    <TitledPane text="¿Puedo importar mis mundos y mods?">
                                        <content>
                                            <VBox spacing="8">
                                                <padding><Insets top="10" right="14" bottom="10" left="14"/></padding>
                                                <Label wrapText="true"
                                                       text="Sí. Desde la sección de Ajustes, selecciona 'Importar recursos' y elige tu carpeta de mundos o mods antiguos."
                                                       styleClass="muted"/>
                                            </VBox>
                                        </content>
                                    </TitledPane>
                                    <TitledPane text="¿Qué versiones de Minecraft soporta?">
                                        <content>
                                            <VBox spacing="8">
                                                <padding><Insets top="10" right="14" bottom="10" left="14"/></padding>
                                                <Label wrapText="true"
                                                       text="Mercurio soporta tanto versiones Vanilla como Forge y Fabric, desde la 1.7.10 hasta la 1.21.1."
                                                       styleClass="muted"/>
                                            </VBox>
                                        </content>
                                    </TitledPane>
                                </panes>
                            </Accordion>
                        </children>
                    </VBox>

                    <!-- ==================== FOOTER ==================== -->
                    <VBox spacing="8" styleClass="home-footer">
                        <children>
                            <Separator/>
                            <Label text="Mercurio Launcher — Proyecto Open Source basado en JavaFX"/>
                            <Label text="Versión 1.3.0 • Desarrollado con ❤ por la comunidad" styleClass="muted"/>
                        </children>
                        <padding><Insets top="0" right="4" bottom="0" left="4"/></padding>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
