<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.mercurio.MainController"
            prefWidth="1200" prefHeight="800">

    <!-- HEADER SUPERIOR -->
    <top>
        <HBox styleClass="app-header">
            <children>
                <Label fx:id="lblSectionTitle" text="Home" styleClass="header-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox spacing="12">
                    <children>
                        <Button text="Perfil" styleClass="header-btn"/>
                        <Button text="Configuración" styleClass="header-btn"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="12" right="16" bottom="12" left="16"/>
            </padding>
        </HBox>
    </top>

    <!-- MENÚ LATERAL IZQUIERDO -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" prefWidth="240" spacing="8">
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <ImageView fitHeight="28" fitWidth="28" preserveRatio="true">
                            <image>
                                <Image url="@/img/mercurio-logo.png"/>
                            </image>
                        </ImageView>
                        <Label text="Mercurio" styleClass="sidebar-title"/>
                    </children>
                </HBox>

                <Separator/>

                <!-- Navegación con ToggleButtons -->
                <ToggleButton fx:id="btnHome" text="Home" styleClass="nav-btn" selected="true"/>
                <ToggleButton fx:id="btnSettings" text="Ajustes" styleClass="nav-btn"/>

                <Pane VBox.vgrow="ALWAYS"/>
                <Separator/>

                <Button text="Salir" styleClass="sidebar-exit"/>
            </children>
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
        </VBox>
    </left>

    <!-- CONTENEDOR CENTRAL (carga dinámica) -->
    <center>
        <StackPane fx:id="contentStack" styleClass="content-root"/>
    </center>

</BorderPane>
