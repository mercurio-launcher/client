<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mercurio.MainController">

    <!-- BARRA DE VENTANA -->
    <top>
        <HBox fx:id="windowBar" styleClass="window-bar" spacing="8">
            <children>
                <Label text="Mercurio" styleClass="window-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <HBox spacing="6">
                    <children>
                        <Button fx:id="btnMinimize" styleClass="win-btn" text="—"/>
                        <Button fx:id="btnMaximize" styleClass="win-btn" text="▢"/>
                        <Button fx:id="btnClose"    styleClass="win-btn" text="✕"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="6" right="8" bottom="6" left="10"/>
            </padding>
        </HBox>
    </top>


    <!-- MENÚ LATERAL IZQUIERDO -->
    <left>
        <VBox fx:id="sidebar" prefWidth="240" spacing="8" styleClass="sidebar">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <ImageView fitHeight="69.0" fitWidth="63.0" preserveRatio="true">
                            <image>
                                <Image url="@/img/mercurio-logo.png" />
                            </image>
                        </ImageView>
                        <Label styleClass="sidebar-title" text="Mercurio" />
                    </children>
                </HBox>

                <Separator />

                <!-- Navegación con ToggleButtons -->
                <ToggleButton fx:id="btnHome" prefHeight="34.0" prefWidth="216.0" selected="true" styleClass="nav-btn" text="Home" />
                <ToggleButton fx:id="btnReports" prefHeight="34.0" prefWidth="216.0" styleClass="nav-btn" text="Informes" />
                <!-- NUEVOS BOTONES -->
                <ToggleButton fx:id="btnAnalytics" prefHeight="34.0" prefWidth="216.0" styleClass="nav-btn" text="Analytics" />
                <ToggleButton fx:id="btnTasks" prefHeight="34.0" prefWidth="216.0" styleClass="nav-btn" text="Tareas" />
                <ToggleButton fx:id="btnHelp" prefHeight="34.0" prefWidth="216.0" styleClass="nav-btn" text="Ayuda" />

                <Pane VBox.vgrow="ALWAYS" />
                <Separator VBox.vgrow="NEVER" />
            <HBox prefHeight="34.0" prefWidth="216.0">
               <children>
                      <ToggleButton fx:id="btnProfile" prefHeight="34.0" prefWidth="110.0" styleClass="nav-btn" text="Perfil" />
                      <ToggleButton fx:id="btnSettings" prefHeight="34.0" prefWidth="110.0" styleClass="nav-btn" text="Ajustes" />
               </children>
            </HBox>

            </children>
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>
        </VBox>
    </left>

    <!-- CONTENEDOR CENTRAL (carga dinámica) -->
    <center>
        <StackPane fx:id="contentStack" styleClass="content-root" />
    </center>

</BorderPane>
